# RetailEdge Environment Variables
# Copy this file to .env and customize for your environment

# Database Configuration (Supabase)
SPRING_DATASOURCE_URL=jdbc:postgresql://db.vltlsiukzjmutgkeffxt.supabase.co:5432/postgres?sslmode=require
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=retailedge123
SPRING_DATASOURCE_DRIVER=org.postgresql.Driver

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# Service Ports
SERVER_PORT_CATALOG=8081
SERVER_PORT_ORDERS=8082
SERVER_PORT_USERS=8083

# Application Names
SPRING_APPLICATION_NAME_CATALOG=catalog-service
SPRING_APPLICATION_NAME_ORDERS=orders-service
SPRING_APPLICATION_NAME_USERS=users-service

# Management & Monitoring
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,openapi
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# SpringDoc OpenAPI
SPRINGDOC_API_DOCS_PATH=/api-docs
SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html

# H2 Console (for development)
SPRING_H2_CONSOLE_ENABLED=false

# Logging
LOGGING_LEVEL_COM_RETAILEDGE=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=INFO
LOGGING_LEVEL_ORG_HIBERNATE_SQL=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_TYPE_DESCRIPTOR_SQL_BASIC=TRACE

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRATION=86400000

# External Services (if needed)
# CATALOG_SERVICE_URL=http://localhost:8081
# ORDERS_SERVICE_URL=http://localhost:8082
# USERS_SERVICE_URL=http://localhost:8083
